version: "3.9"

services:

  elasticsearch:
    image: docker.elastic.co/elasticsearch/elasticsearch:8.11.3
    container_name: elasticsearch
    environment:
      - node.name=es-node
      - cluster.name=f1-cluster
      - discovery.type=single-node
      - xpack.security.enabled=false
      - xpack.security.enrollment.enabled=false
      - ES_JAVA_OPTS=-Xms512m -Xmx512m
    ports:
      - "9200:9200"
    volumes:
      - elastic_data:/usr/share/elasticsearch/data
    networks:
      - f1_network

  kibana:
    image: docker.elastic.co/kibana/kibana:8.11.3
    container_name: kibana
    depends_on:
      - elasticsearch
    environment:
      - ELASTICSEARCH_HOSTS=http://elasticsearch:9200
      - XPACK_SECURITY_ENABLED=false
    ports:
      - "5601:5601"
    networks:
      - f1_network

  postgres:
    image: postgres:16
    container_name: f1_postgres
    environment:
      POSTGRES_DB: FormulaOne
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: "123"
    ports:
      - "5433:5432"
    healthcheck:
        test: ["CMD-SHELL", "pg_isready -U postgres -d FormulaOne"]
        interval: 5s
        timeout: 5s
        retries: 5
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - f1_network

  redis:
    image: redis:7
    container_name: f1_redis
    ports:
      - "6379:6379"
    networks:
      - f1_network

  seq:
    image: datalust/seq:2024.3
    container_name: f1_seq
    environment:
      ACCEPT_EULA: "Y"
    ports:
      - "5341:80"
    volumes:
      - seq_data:/data
    networks:
      - f1_network

  f1-api:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: f1_api
    ports:
      - "5000:8080"
    depends_on:
       postgres:
            condition: service_healthy
       redis:
            condition: service_started
       seq:
         condition: service_started
       elasticsearch:
            condition: service_started 
    environment:
      - ASPNETCORE_ENVIRONMENT=Docker
      - ConnectionStrings__DefaultConnection=Host=postgres;Port=5432;Database=FormulaOne;Username=postgres;Password=123
      - ConnectionStrings__Redis=redis:6379
      - Seq__ServerUrl=http://seq:80
      - Elastic__Url=http://elasticsearch:9200
    networks:
      - f1_network

networks:
  f1_network:
    driver: bridge

volumes:
  postgres_data:
  seq_data:
  elastic_data:
